
<h2><%= @post.title %></h2>
<h5><%= @post.author %></h5>
<h5><%= @post.mood %></h5>
<p><%= @post.body %></p>

<ul>
<% @comments.each do |comment| %>
  <%= link_to post_comment_url(comment.post, comment) do %>
    <li>
      On <%= comment.created_at %>, <%= comment.author %> said "<%= comment.body %>"
    </li>
  <% end %>
<% end %>
</ul>
